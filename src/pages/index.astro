---
import SubmitPost from '../components/SubmitPost.svelte';
import PostViewer from '../components/PostViewer.svelte';
import Layout from '../layouts/Layout.astro';
---

<Layout title="redtrack" desc="thing">
	<div id="all-posts">
		<div id="post-submission">
			<SubmitPost client:load />
		</div>
		<div id="prev-posts">
			<!-- <PostViewer client:only="svelte" /> -->
			<div id="chart"></div>

			
		</div>
	</div>
</Layout>


<script>
	import ApexCharts from 'apexcharts';

	  
	var options = {
		  series: [{
			name: "Desktops",
			data: [10, 41, 35, 51, 49, 62, 69, 91, 148]
		}],
		  chart: {
		  type: 'line',
		  zoom: {
			enabled: false
		  }
		},
		dataLabels: {
		  enabled: false
		},
		stroke: {
		  curve: 'straight'
		},
		title: {
		  text: 'Product Trends by Month',
		  align: 'left'
		},
		grid: {
		  row: {
			colors: ['#f3f3f3', 'transparent'], // takes an array which will be repeated on columns
			opacity: 0.5
		  },
		},
		xaxis: {
		  categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep'],
		}
		};
		var chart = new ApexCharts(document.querySelector("#chart"), options);
		chart.render();
</script>			


<style is:global>
	#post-submission {
		max-width: 600px;
		float: left;
	}
	#prev-posts {
		float: right;
	}

	#all-posts {}
</style>